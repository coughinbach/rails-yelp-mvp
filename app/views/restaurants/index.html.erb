<h1>Restaurants</h1>

<%= link_to new_restaurant_path do %>
  <i class="fa fa-plus"></i> Add a new restaurant
<% end %>

<br>
<br>
<ul id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant.id) %>
      <%= link_to restaurant_path(restaurant.id), method: :destroy, data: { confirm: "Delete #{restaurant.name}?" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </li>
  <% end %>
</ul>
