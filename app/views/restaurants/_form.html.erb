<%= simple_form_for [@restaurant] do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
      <%= f.input :name %>
    </div>
    <div class="form-group">
      <%= f.input :address %>
    </div>
    <div class="form-group">
      <%= f.input :phone_number %>
    </div>
    <div class="form-group">
      <%= f.input :category %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>
